<div class='comment'>
  <p class='comment-meta'>
    <span class='comment-date'><%= updated_string(comment) %> - <%= user_name(comment) %></span>
    <span class='comment-delete'><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Delete this comment?' } %></span>
  </p>
  <p class='comment-text'>
    <%= comment.body %>
  </p>
</div>